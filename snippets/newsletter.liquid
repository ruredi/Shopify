{% if settings.display_popup_newsletter %}
<div class="newsletterwrapper" data-newsletter id="email-modal">
  <div class="modal-overlay">
   
    <div class="window-content"> 
         {% if settings.pop_up_newsletter_img_show %}
        <div class="column-left medium-down--hide">
        
         <img src="{{ 'popup_newsletter_img.png' | asset_url }}" alt="{{ settings.popup_newsletter_title }}";>  
        
          </div>
        {% endif %}
          
      
      <div class="column-right">
          
        <div class="window-box">
      <a class="close close-window" title="{{ 'general.password_page.close' | t }}">
        {% include 'icon-close' %}
      </a>
      <div class="newsletter-title">
        <h4 class="title">{{ settings.popup_newsletter_title }}</h4>
        <h2 class="sub_title">{{ settings.popup_newsletter_offer_title }}</h2>
      </div>
      <p class="message">{{ settings.popup_newsletter_message }}</p>
      <div id="mailchimp-email-subscibe">
        <div id="mc_embed_signup">
          {% include 'newsletter-form' %}
        </div>   
       
      </div>   
          <input id="dismiss" type="checkbox" name="dismiss">
        <label for="dismiss">
          <span>{{ settings.form_note }}</span>
        </label>
    </div>  
      </div></div>
  </div>
</div>
{% endif %}

