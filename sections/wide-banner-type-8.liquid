<div data-section-id="{{ section.id }}" data-section-type="wide-banner-type-8" class="wide-banner-type-8 custom-section" style="{% if section.settings.image_1 != blank %}background-image:url('{{ section.settings.image_1 | img_url: '1920X' }}');background-repeat:no-repeat;background-size:cover;background-position:center;{% else %}background-color:{{section.settings.background_color}}{% endif%}">  
  <div class="grid-uniform">  
    <div class="grid__item wide--seven-tenths post-large--seven-tenths large--seven-tenths medium-down--grid__item small--grid__item">
    <div class="wide-banner-type-5-block">      
      <div class="wide-banner-type-5-content wow fadeInDown">  
        <div class="wide-banner-type-5-rounded">
          <div class="title-boxed" style="background:{{ section.settings.title_bg }} ">
            {% if section.settings.title_1 != blank %}
            <h2 style="color:{{ section.settings.title_color }}">{{ section.settings.title_1 }}</h2>
            {% endif %}
            {% if section.settings.text_1 != blank %}
            <p style="color:{{ section.settings.text_color }};margin:0;font-weight:normal;">{{ section.settings.text_1 }}</p>
            {% endif %}
          </div>
          <div class="wide-content">
            {% if section.settings.titleshadow_1 != blank %}
            <h4 style="color:{{ section.settings.shadowtext_color }}">{{ section.settings.titleshadow_1 }}</h4>
            {% endif %}           
          </div>
        </div> 
      </div>
    </div>
    </div>    
        <div class="grid__item wide--three-tenths post-large--three-tenths large--three-tenths medium-down--grid__item small--grid__item">
           {% if section.settings.button_1 != blank %}
            <a class="btn" href="{{ section.settings.link_1 }}">{{ section.settings.button_1 }}</a>    
            {% endif %}     
    </div>
  </div>
</div>
<style>
  .wide-banner-type-8.custom-section:before { {% if section.settings.pattern_image != blank %} background-image:url({{ section.settings.pattern_image | img_url: '1920X' }});content:""; {%endif %} }
</style>




