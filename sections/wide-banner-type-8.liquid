"id": "pattern_image",
"label": "before Image",
"info": "Size: 24x11"
},
{
"type": "color",
"id": "background_color",
"label":"Bckground color",
"default": "#000"
},
{
"type": "text",
"id": "title_1",
"label": "Heading"
},

{
"type": "color",
"id": "title_bg",
"label":"Title Bg",
"default": "#fff"
},
{
"type": "color",
"id": "title_border",
"label":"Title Border",
"default": "#fc3e78"
},
{
"type": "color",
"id": "title_color",
"label":"Title color",
"default": "#000"
},
{
"type": "textarea",
"id": "text_1",
