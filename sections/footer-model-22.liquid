<div id="instagram-stories-box"></div>
<div id="instagram-feed-box"></div>
<div data-section-id="{{ section.id }}"  data-section-type="Footer-model-22" class="footer-model-22" style="{% if section.settings.image_1 %}background-image:url('{{ section.settings.image_1 | img_url: '1920X' }}');background-attachment:fixed;background-repeat:no-repeat;background-position:center center; {% else %}background:{{ section.settings.bg_color }} {% endif %};">
  <div class="footerbg1" style="{% if section.settings.footer_bg_1 != blank %} background-image:url('{{ section.settings.footer_bg_1 | img_url: 'master' }}');background-repeat:no-repeat; position:absolute;width:380px;height:220px;z-index:0;left:50px;top:20%{% endif %}"></div>
  <div class=" container">
  <div class="footer-logo">
    {% if section.settings.footer_logo_enable %}          
    <a href="/">
      <img class="normal-footer-logo" src="{{ section.settings.footer_logo | img_url: "200x" }}" alt="{{ shop.name }}" />
    </a>
    {% endif %}  

   <div class="footer-bottom">

      {%- assign footer_linklist4 = section.settings.footer_menu_4 %}
      {% if section.settings.use_footer_bottom and linklists[footer_linklist4].links.size > 0 %}
      <div class="grid__item footer-bottom__menu" style="">          
        <ul>
          {% for link in linklists[section.settings.footer_menu_4].links %}
          <li>
            <a style="color:{{ section.settings.footer_bottom_text }};" href="{{ link.url }}">{{ link.title }}</a>
          </li>
          {% endfor %}
        </ul>        
      </div>
      {% endif %}
    </div>

 	<div class="footer_social_icons">
      {% if section.settings.footer_social_enable %}      
      {% include 'social-links-type-5' %}
      {% endif %}
    </div>






  </div>

  <div style="" class="grid__item copyright-section">
    {% if section.settings.copyright != blank %}
    <p style="color:{{ section.settings.copyright_text }};"  class="copyright">{{ section.settings.copyright }} {% if section.settings.show_powered_by %}  {{ powered_by_link }} {% endif %}</p>
    {% endif %}   
    
     {% if section.settings.copyright_sml_txt %}
    <p class="copy_desc" style="color:{{section.settings.copyright_sml_txt_clr}}">{{section.settings.copyright_sml_txt}}</p>
      {% endif %}
    
    {% if section.settings.footer_show_methods_of_payment %}
    <div class="footer-icons">        
      <ul class="inline-list payment-icons">
        {% if section.settings.payment_icon_1 != blank %}<li><a href="/cart"><img src="{{ section.settings.payment_icon_1 | img_url }}" alt="payment_icon_1" /></a></li>{% endif %}
        {% if section.settings.payment_icon_2 != blank %}<li><a href="/cart"><img src="{{ section.settings.payment_icon_2 | img_url }}" alt="payment_icon_2" /></a></li>{% endif %}
        {% if section.settings.payment_icon_3 != blank %}<li><a href="/cart"><img src="{{ section.settings.payment_icon_3 | img_url }}" alt="payment_icon_3" /></a></li>{% endif %}
        {% if section.settings.payment_icon_4 != blank %}<li><a href="/cart"><img src="{{ section.settings.payment_icon_4 | img_url }}" alt="payment_icon_4" /></a></li>{% endif %}
        {% if section.settings.payment_icon_5 != blank %}<li><a href="/cart"><img src="{{ section.settings.payment_icon_5 | img_url }}" alt="payment_icon_5" /></a></li>{% endif %}
        {% if section.settings.payment_icon_6 != blank %}<li><a href="/cart"><img src="{{ section.settings.payment_icon_6 | img_url}}" alt="payment_icon_6" /></a></li>{% endif %}            
        {% if section.settings.payment_icon_7 != blank %}<li><a href="/cart"><img src="{{ section.settings.payment_icon_7 | img_url}}" alt="payment_icon_7" /></a></li>{% endif %}            
        {% if section.settings.payment_icon_8 != blank %}<li><a href="/cart"><img src="{{ section.settings.payment_icon_8 |  img_url}}" alt="payment_icon_8" /></a></li>{% endif %}            
        {% if section.settings.payment_icon_9 != blank %}<li><a href="/cart"><img src="{{ section.settings.payment_icon_9 | img_url}}" alt="payment_icon_9" /></a></li>{% endif %}            
        {% if section.settings.payment_icon_10 != blank %}<li><a href="/cart"><img src="{{ section.settings.payment_icon_10 | img_url}}" alt="payment_icon_10" /></a></li>{% endif %}            
      </ul>                 
    </div> 
    {% endif %}
  </div>
  </div>  
  <div class="footerbg2" style="{% if section.settings.footer_bg_2 != blank %} background-image:url('{{ section.settings.footer_bg_2 | img_url: 'master' }}');background-repeat:no-repeat;position:absolute;width:430px;height:250px;z-index:0;bottom:20%;right:50px;{% endif %}"></div>
  <style>
    
    .footer-model-22 .footer_social_icons ul li a {  color:{{ section.settings.footer_social_link }} !important;  }
    .footer-model-22 .footer_social_icons ul li a:hover { border-color:{{ section.settings.footer_social_link_hover_border }} !important;color:{{ section.settings.footer_social_link_hover }} !important; }
    .footer-model-22 .copyright-section p a { color:{{ section.settings.copyright_link }}; }
    .footer-model-22 .copyright-section p a:hover,
    .footer-model-22 .footer-bottom .footer-bottom__menu ul li a:hover { text-decoration:underline; }
   
    .footer-model-22 .footer-bottom .footer-bottom__menu ul li::before{background:{{section.settings.footer_bottom_border_clr}};}
    
    .footer-model-22 .footer_social_icons ul::before{   background: {{section.settings.footer_bottom_border_clr}};}
    .footer-model-22:before{ content:"";position:absolute;top:-30px;background-image:url('{{ section.settings.before_image | img_url: 'master' }}');background-repeat:repeat;left:0;width:100%;height:30px;}
  </style>
</div>

