{% if section.settings.display_top_bar %}    
<div class="wrapper">
  <div class="top_bar top-bar-type-14">  
    <div class="wrapper">
     
    <div class="header_social top_bar_left">
        {%- assign top_bar_menu = section.settings.top_bar_menu %}
      {% if linklists[top_bar_menu].links.size > 0 %}
      <ul>
        {% for link in linklists[top_bar_menu].links %}
        <li>
          <a href="{{ link.url }}" class="{% if link.active %}current{% endif %}">
            {{ link.title }}         
          </a> 	    
        </li>
        {% endfor %}
      </ul>
      {% endif %}  
      
    </div>
   

    <div class="top_bar_menu">  
      
      
    
    
      
      
      <ul class="menu_bar_right grid__item wide--one-sixth post-large--one-sixth">
        
        {% if section.settings.display_minicart %}
                <li class="header-bar__module cart header_cart">
                  {% include 'mini-cart' %} 
                </li> 
                {% endif %}  
        
        
        {% if settings.display_currency %}  
        <li class="header_currency">
          <ul class="tbl-list">
            <li class="currency dropdown-parent uppercase currency-block">
              {% include 'currencies-switcher' %}
            </li>
          </ul>
        </li> 
        {% endif %}
        
      </ul>
    </div>
  </div>
</div>
</div>
{% endif %} 

<style>
  
  /* Top block */
    .header-type-14 .top_bar { background: {{ section.settings.top_bar_bg }}; }
    .header-type-14 .top_bar a { color:{{section.settings.top_bar_links }};}    
    .header-type-14 .top_bar a:hover, .header-type-14 .top_bar a:hover span { color:{{section.settings.top_bar_link_hover }};}    
    .header-type-14 .header-bar__module.cart .baskettop a.icon-cart-arrow #cartCount { background: {{ section.settings.minicart_count_bg }};color:{{section.settings.minicart_count }};}
    .header-type-14 .header-bar__module.cart .baskettop a.icon-cart-arrow:hover #cartCount { background: {{ section.settings.minicart_count_hover_bg }};color:{{section.settings.minicart_count_hover_text }};}
    .header-type-14 .top_bar .top_bar_right li span,.header-type-14 .tbl-list>li.currency>.dropdown-toggle { border-right:1px solid {{ section.settings.top_border_between_bars }}; }
    .header-type-14 .top_bar ul li:last-child,.header-type-14 .top_bar .top_bar_right li:last-child span { border-right:none; }
    .header-type-14 .header-bar__module.cart .baskettop a.icon-cart-arrow #cartCount { background: {{ section.settings.minicart_count_bg }};color:{{section.settings.minicart_count }};}
    .header-type-14 .header-bar__module.cart .baskettop a.icon-cart-arrow:hover #cartCount { background: {{ section.settings.minicart_count_hover_bg }};color:{{section.settings.minicart_count_hover_text }};}



 /* Currency block */

    .header-type-14 a.currency_wrapper.dropdown-toggle {color: {{ section.settings.currency_icon }};}
    .header-type-14 .tbl-list>li.currency>.dropdown-toggle:hover  {color: {{ section.settings.currency_icon_hover }};}
    .header-type-14 .tbl-list>li.currency .flag-dropdown-menu  {background: {{ section.settings.currency_bg }};}
    .header-type-14 .flag-dropdown-menu li a span {color: {{ section.settings.currency_link }};}
    .header-type-14 .flag-dropdown-menu li a:hover span {color:{{section.settings.currency_hover_link }};}  

    
    .header-type-14 .header_currency ul select,.header-type-14 .header_currency ul li.currency .selector-arrow::after {color:{{section.settings.currency_icon}};}   
    .header-type-14 .header_currency ul select:hover,.header-type-14 .header_currency ul li.currency:hover .selector-arrow:after {color:{{section.settings.currency_icon_hover}};}  
    .header-type-14 .header_currency ul li.currency:hover:after {border-top-color:{{section.settings.currency_icon_hover}};}
    .header-type-14 .header_currency ul li.currency:after {border-top-color:{{section.settings.currency_icon}};}
    .header-type-14 .header_currency option {background:{{section.settings.currency_bg}};color:{{section.settings.currency_link}};}


    /* Cart Summary block */
    .header-type-14 a.icon-cart-arrow i  {color: {{ section.settings.minicart_icon }};}
    .header-type-14 a.icon-cart-arrow:hover i {color: {{ section.settings.minicart_icon_hover }};}
    .header-type-14 #slidedown-cart .actions, .header-type-14  #slidedown-cart  {background: {{ section.settings.minicart_bg }};}
    .header-type-14 .header-bar__module p {color: {{ section.settings.minicart_text }};}
    .header-type-14 .header-bar__module a {color:{{section.settings.minicart_link }};}  
    .header-type-14 .header-bar__module a:hover {color:{{section.settings.minicart_link_hover}};} 
    .header-type-14 .header-bar__module .btn {color:{{section.settings.minicart_btn_text}};background: {{ section.settings.minicart_btn_bg }};} 
    .header-type-14 .header-bar__module .btn:hover {color:{{section.settings.minicart_btn_hover_text}};background: {{ section.settings.minicart_btn_hover_bg }};} 
    .header-type-14  #slidedown-cart .total .price, .header-type-14 #minicart_total,.header-type-14 #slidedown-cart ul li .cart-collateral {color:{{section.settings.minicart_total }};} 

   
    .header-type-14 .site-nav .widget-featured-product {border:1px solid {{section.settings.menubar_links_hover}};}
  
  
  .header-type-14 .top_bar_left li a::after { background: {{section.settings.top_border_between_bars}};}
  .header-type-14 .top_bar_left li:last-child a::after { background:none; }
  
</style>



