 {% if section.settings.display_top_bar %}  
<div class="top_bar top-bar-type-16">    
  <div class="container">
    {% if section.settings.header_phone_value != blank or  section.settings.header_mail_value != blank %}
    <ul class="top_bar_left">
      {% if section.settings.header_phone_value != blank %}
      <li><i class="{{ section.settings.header_phone_label }}"></i>{{ section.settings.header_phone_value }}</li>
      {% endif %}
      {% if section.settings.header_mail_value != blank %}
      <li><i class="{{ section.settings.header_mail_label }}"></i><a href="mailto:{{ section.settings.header_mail_value }}"> {{ section.settings.header_mail_value }}</a></li>
      {% endif %}
    </ul>
    {% endif %}
    <div class="top_bar_menu">
      {%- assign top_bar_menu = section.settings.top_bar_menu %}
      {% if linklists[top_bar_menu].links.size > 0 %}
      <ul>
        {% for link in linklists[top_bar_menu].links %}
        <li>
          <a href="{{ link.url }}" class="{% if link.active %}current{% endif %}">
            {{ link.title }}        
          </a> 	    
        </li>
        {% endfor %}
      </ul>
      {% endif %}  

      {% if shop.customer_accounts_enabled or section.settings.display_wishlist %}
      <div class="customer_account">                          
        <ul>
          {% if shop.customer_accounts_enabled %}
          {% if customer %}
          <li>
            <a href="/account" title="{{ 'layout.customer.account' | t }}"><i class="fas fa-user"></i><span>{{ 'layout.customer.account' | t }}</span></a>
          </li>
          <li class="logout-link">
            <a title="{{ 'layout.customer.log_out' }}" href="/account/logout" ><i class="fas fa-user-sign-out-alt"></i><span>{{ 'layout.customer.log_out' }}</span></a>
            </li>
          {% else %}
          <li>
            <a title="{{ 'layout.customer.log_in' | t }}" href="/account/login"><i class="fas fa-sign-in-alt"></i><span>{{ 'layout.customer.log_in' | t }}</span></a>
          </li>
          <li>
            <a title="{{ 'layout.customer.create_account' | t }}" href="/account/register"><i class="fas fa-user"></i><span>{{ 'layout.customer.create_account' | t }}</span></a>
          </li>          
          {% endif %}  
          {% endif %} 
          {% if section.settings.display_wishlist %}   
          <li>            
            <a class="wishlist" href="/pages/wishlist" title="{{ 'products.wishlist.wishlist_name' | t }}"><i class="far fa-heart"></i><span>{{ 'products.wishlist.wishlist_name' | t }}</span></a>           
          </li>
          {% endif %} 
          
            {% if section.settings.display_minicart %}
                <li class="header-bar__module cart header_cart">               
                  {% include 'mini-cart' %}                    
                </li> 
                {% endif %}
          
          
        </ul>
      </div>   
      {% endif %}  
      
      
       
      
      

      
  </div>
</div> 
</div>
 {% endif %}

 <style> 
        
    .header-type-16 .header-top a.close { background: {{ section.settings.stripe_icon }}; }  
    .header-type-16 .header-top a.close:hover { background: {{ section.settings.stripe_icon_hover }}; }  
    .header-type-16 .header-top { background: {{ section.settings.stripe_bg }}; }      
    .header-type-16 .header-top ul li { color: {{ section.settings.stripe_text }}; }    
        
    /* Top block */
    .header-type-16 .top_bar { background: {{ section.settings.top_bar_bg }}; }
    .header-type-16 .top_bar li { color:{{section.settings.top_bar_text}};}     
    .header-type-16 .top_bar a,.header-type-16 .top_bar button { color:{{section.settings.top_bar_links }};}    
    .header-type-16 .top_bar a:hover, .header-type-16 .top_bar a:hover span,.header-type-16 .top_bar button:hover { color:{{section.settings.top_bar_link_hover }};}    
     
   
   
   
     /* Cart Summary block */
       .header-type-16 #cartCount  {color: {{ section.settings.minicart_icon }};}
    .header-type-16 #cartCount:hover  {color: {{ section.settings.minicart_icon_hover }};}
   
    .header-type-16 #slidedown-cart .actions, .header-type-16  #slidedown-cart  {background: {{ section.settings.minicart_bg }};}
    .header-type-16 .header-bar__module p {color: {{ section.settings.minicart_text }};}
    .header-type-16 .header-bar__module a {color:{{section.settings.minicart_link }};}  
    .header-type-16 .header-bar__module a:hover {color:{{section.settings.minicart_link_hover}};} 
    .header-type-16 .header-bar__module .btn {color:{{section.settings.minicart_btn_text}};background: {{ section.settings.minicart_btn_bg }};} 
    .header-type-16 .header-bar__module .btn:hover {color:{{section.settings.minicart_btn_hover_text}};background: {{ section.settings.minicart_btn_hover_bg }};} 
    .header-type-16  #slidedown-cart .total .price, .header-type-16 #minicart_total,.header-type-16 #slidedown-cart ul li .cart-collateral {color:{{section.settings.minicart_total }};} 
    .header-type-16 #slidedown-cart li { border-bottom:1px solid {{ section.settings.border_between_bars}}; }
   
   
   
   
   
   
   
   
</style>

