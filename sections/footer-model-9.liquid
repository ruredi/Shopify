<div data-section-id="{{ section.id }}"  data-section-type="Footer-model-9" class="footer-model-9">
  <footer class="site-footer" style="background-color:{{ section.settings.footer_bg_clr }};{% if section.settings.footer_bg_img %} background-image:url('{{ section.settings.image_1 | img_url: 'master' }}');background-repeat:no-repeat;background-size:cover;background-position:center;{% endif %}">      
    <div class="container">
    <div class="grid-uniform">         

          {% assign num_footer_columns = 0 %}     
          {%- assign footer_linklist1 = section.settings.footer_menu_1 %}
          {% if linklists[footer_linklist1].links.size > 0 %}
          {% assign num_footer_columns = num_footer_columns | plus: 1 %}
          {% endif %}

          {%- assign footer_linklist2 = section.settings.footer_menu_2 %}
          {% if linklists[footer_linklist2].links.size > 0 %}
          {% assign num_footer_columns = num_footer_columns | plus: 1 %}
          {% endif %}

          {%- assign footer_linklist3 = section.settings.footer_menu_3 %}
          {% if linklists[footer_linklist3].links.size > 0 %}
          {% assign num_footer_columns = num_footer_columns | plus: 1 %}
          {% endif %}
          
          {% if section.settings.show_contact %}
          {% assign num_footer_columns = num_footer_columns | plus: 1 %}
          {% endif %}

          {% case num_footer_columns %}
          {% when 0 %}
          {% when 1 %}
          {% assign footer_num_column_width = 'text-left' %}
          {% when 2 %}
          {% assign footer_num_column_width = 'wide--one-half post-large--one-half large--one-half medium--one-half' %}
          {% when 3 %}
          {% assign footer_num_column_width = 'wide--one-third post-large--one-third large--one-third medium--one-half' %} 
          {% when 4 %}
          {% assign footer_num_column_width = 'wide--one-quarter post-large--one-quarter large--one-quarter medium--one-half small--one-half' %} 
          {% endcase %} 



          {%- assign footer_linklist1 = section.settings.footer_menu_1 %}
          {% if linklists[footer_linklist1].links.size > 0 %}
          <div class="grid__item {{ footer_num_column_width }}">   
            {% if section.settings.footer_menu_1_title != blank %}
            <h4 style="color:{{ section.settings.footer_text }};">{{ section.settings.footer_menu_1_title }}</h4>
            {% endif %}
            <ul class="site-footer__links">
              {% for link in linklists[section.settings.footer_menu_1].links %}
              <li><a style="color:{{ section.settings.footer_link }};"  href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>          
          </div>
          {% endif %}    


          {%- assign footer_linklist2 = section.settings.footer_menu_2 %}
          {% if linklists[footer_linklist2].links.size > 0 %}
          <div class="grid__item {{ footer_num_column_width }}">          
            {% if section.settings.footer_menu_2_title != blank %}
            <h4 style="color:{{ section.settings.footer_text }};"> {{ section.settings.footer_menu_2_title }}</h4>
            {% endif %}
            <ul class="site-footer__links">
              {% for link in linklists[section.settings.footer_menu_2].links %}
              <li><a style="color:{{ section.settings.footer_link }};"  href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>         
          </div>
          {% endif %}

          {%- assign footer_linklist3 = section.settings.footer_menu_3 %}
          {% if linklists[footer_linklist3].links.size > 0 %}
          <div class="grid__item {{ footer_num_column_width }}">          
            {% if section.settings.footer_menu_3_title != blank %}
            <h4 style="color:{{ section.settings.footer_text }};">{{ section.settings.footer_menu_3_title }}</h4>
            {% endif %}
            <ul class="site-footer__links">
              {% for link in linklists[section.settings.footer_menu_3].links %}
              <li><a style="color:{{ section.settings.footer_link }};"  href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>         
          </div>
          {% endif %}

          {% if section.settings.show_contact %}
          <div class="grid__item {{ footer_num_column_width }}">     
            {% if section.settings.footer_contact_title != blank %}        
            <h4 style="color:{{ section.settings.footer_text }};">{{ section.settings.footer_contact_title}}</h4> 
            {% endif %}        
            {% if section.settings.footer_address != blank or section.settings.footer_contact_no != blank %}        
            <div class="address">
              {% if section.settings.footer_address != blank %}
              <p style="color:{{ section.settings.footer_link }};"><i class="fa fa-home"></i>   {{ section.settings.footer_address }}</p>
              {% endif %}          
              {% if section.settings.footer_contact_no != blank %}
              <p style="color:{{ section.settings.footer_link }};"> <i class="fa fa-phone"></i>{{ section.settings.footer_contact_no }}</p>
              {% endif %}
            </div>
            {% endif %}
            {% if  section.settings.footer_contact_link != blank and section.settings.footer_contact_id != blank %}
            <i class="fa fa-envelope"></i> <a class="mail-address" style="color:{{ section.settings.footer_link }};" href="mailto:{{ section.settings.footer_contact_link }}">{{ section.settings.footer_contact_id }}</a>
            {% endif %}        

            
          </div>
          {% endif %}    
      
      
      
        </div>      
    </div>
  </footer>

  
  {% if section.settings.footer_social_enable or section.settings.footer_show_app_store  %}  
<div class="grid__item"> 
  
  
     <div class="social_icons_bg" style="float:left;width:100%;background:{{ section.settings.footer_icons_bg }}">   
 
      {% if section.settings.footer_social_enable %}  
          <div class="grid__item wide--one-half post-large--one-half large--one-half medium--one-half">
            <div class="footer_social_links">
               {% if section.settings.social_title != blank %}
            <h4 style="color:{{ section.settings.footer_text }};">{{ section.settings.social_title }}</h4>
            {% endif %}
              {% include 'social-links-type-6' %}
            </div>
      </div>
            {% endif %}
      
       {% if section.settings.footer_show_app_store %}
                <div class="grid__item wide--one-half post-large--one-half large--one-half medium--one-half">

    <div class="app_store">    
        <div class="footer-icons">  
          {% if section.settings.app_title != blank %}        
          <h4 style="color:{{ section.settings.footer_text }}">{{ section.settings.app_title }}</h4> 
          {% endif %}           
          <ul class="inline-list">
            {% if section.settings.app_store_1 != blank %}<li><a href="{{ section.settings.app_store_1_link }}" target="_blank"><img src="{{ section.settings.app_store_1 | img_url }}" alt="{{ section.settings.app_title }}" /></a></li>{% endif %}
            {% if section.settings.app_store_2 != blank  %}<li><a href="{{ section.settings.app_store_2link }}" target="_blank"><img src="{{ section.settings.app_store_2 | img_url }}" alt="{{ section.settings.app_title }}" /></a></li>{% endif %}
            {% if section.settings.app_store_3 != blank  %}<li><a href="{{ section.settings.app_store_3_link }}" target="_blank"><img src="{{ section.settings.app_store_3| img_url }}" alt="{{ section.settings.app_title }}" /></a></li>{% endif %}
          </ul>
        </div>         
    </div>
      </div>
    {% endif %}
  
       
  </div>  
      </div>
  {% endif %}

  <div class="grid__item"> 
   
    
    
  <div style="background:{{ section.settings.copyright_bg }};" class="grid__item copyright-section {% unless section.settings.footer_show_methods_of_payment %}text-center{% endunless %}">
    <div class="container">
    {% if section.settings.show_powered_by and section.settings.copyright != blank %}
    <p style="color:{{ section.settings.copyright_text }};"  class="copyright">{{ section.settings.copyright }} {{ powered_by_link }}</p>
    {% endif %}       
       {% if section.settings.footer_show_methods_of_payment %}      
        <div class="payment_section">                 
          <div class="footer-icons">        
            <ul class="inline-list payment-icons">
              {% if section.settings.payment_icon_1 != blank %}<li><a href="/cart"><img src="{{ section.settings.payment_icon_1 | img_url: "55x" }}" alt="payment_icon_1" /></a></li>{% endif %}
              {% if section.settings.payment_icon_2 != blank %}<li><a href="/cart"><img src="{{ section.settings.payment_icon_2 | img_url: "55x" }}" alt="payment_icon_2" /></a></li>{% endif %}
              {% if section.settings.payment_icon_3 != blank %}<li><a href="/cart"><img src="{{ section.settings.payment_icon_3 | img_url: "55x" }}" alt="payment_icon_3" /></a></li>{% endif %}
