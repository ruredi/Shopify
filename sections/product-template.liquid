  .product_single_detail_section #AddToCart { {% if section.settings.use_cart_width %} width:100%;padding:{{ section.settings.cart_size }};font-size:{{ section.settings.cart_font_size }}px; {% else %} width:50%;  {% endif %}  float:left;letter-spacing:0.06em; background: {{ section.settings.color_cart }};border:none;color: {{ section.settings.color_button_cart_text }};margin-bottom:10px;margin-right:10px; }
