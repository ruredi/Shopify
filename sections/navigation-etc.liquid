
<div class="menu-main-wrapper">
  <div class="container">
  <div class="grid__item">

    <div class="nav-bar-mobile">
      <nav class="nav-bar" role="navigation">

        <div class="grid__item wide--three-quarters post-large--three-quarters large--three-quarters medium-down--one-third small--grid__item ">
          <div class="site-nav-dropdown_inner">
            {% include 'site-nav' %}
          </div>
        </div>

        <div class="grid__item wide--one-quarter post-large--one-quarter large--one-whole medium--one-whole small--grid__item ">
          <ul class="header-5-icon">
             {% if settings.display_currency %} 
            <li class="header_currency">
              <ul class="tbl-list">
                <li class="currency dropdown-parent uppercase currency-block">            
                  {% include 'currencies-switcher' %}
                </li>
              </ul>
            </li>  
            {% endif %}
             {% if section.settings.display_search %}                
                <li class="header-search">
                  <a href="/search" class="site-header__link site-header__search js-drawer-open-top">
                    <span class="fa fa-search" aria-hidden="true"></span>
                  </a>
                </li>
                {% endif %}
            
            {% if section.settings.display_minicart %}
            <li class="header-bar__module cart header_cart">
              {% include 'mini-cart' %} 
            </li> 
            {% endif %} 
           
            <li class="header-mobile">
              <div class="menu-block visible-phone"><!-- start Navigation Mobile  -->
                <div id="showLeftPush">
                  <i class="fa fa-bars" aria-hidden="true"> </i>
                </div>
              </div><!-- end Navigation Mobile  --> 
            </li> 

            {% if shop.customer_accounts_enabled or section.settings.display_wishlist %}

            <li class="menu-right-icon">
              <div class="menu_bar_right">
                <div class="slidedown_section">
                  <a  id="Togglemodal" title="{{ 'layout.customer.log_in' | t }}" class="icon-cart-arrow">My Account</a>
                  <div id="slidedown-modal">
                    <div class="header-panel-top">
                      <ul>

                        {% if shop.customer_accounts_enabled or section.settings.display_wishlist %}
                        <li>
                          <div class="customer_account">                          
                            <ul>
                              {% if shop.customer_accounts_enabled %}
                              {% if customer %}
                              <li>
                                <a href="/account" title="{{ 'layout.customer.account' | t }}"><i class="fas fa-user" aria-hidden="true"></i> {{ 'layout.customer.account' | t }}</a>
                              </li>
                              <li class="logout-link">
                                <a href="/account/logout" title="{{ 'layout.customer.log_out' | t }}" data-value="value 1"><i class="fas fa-sign-out-alt"></i></a>
                              </li>
                              {% else %}
                              <li>
                                <a href="/account/login" title="{{ 'layout.customer.log_in' | t }}"> <i class="fas fa-sign-in-alt icons" aria-hidden="true"></i> {{ 'layout.customer.log_in' | t }}</a>
                              </li>
                              <li>
                                <a href="/account/register" title="{{ 'layout.customer.create_account' | t }}">  <i class="fas fa-user" aria-hidden="true"></i> {{ 'layout.customer.create_account' | t }}</a>
                              </li>          
                              {% endif %}  
                              {% endif %} 
                              {% if section.settings.display_wishlist %}
                              <li>
                                <a href="/pages/wishlist" title="{{ 'products.wishlist.wishlist_name' | t }}"> <i class="far fa-heart" aria-hidden="true"></i> {{ 'products.wishlist.wishlist_name' | t }}</a>
                              </li>
                              {% endif %}
                            </ul>
                          </div>     
                        </li>
                        {% endif %}
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </li>
            {% endif %}
            
             
            
          </ul>

        </div>

      </nav>
    </div>
  </div>
  </div>
</div>







