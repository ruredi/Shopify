<div data-section-id="{{ section.id }}"  data-section-type="home-product-grid-type-3" class="home-product-grid-type-3" style="{% if section.settings.sec_bg_image %}background-image:url('{{ section.settings.sec_bg_image | img_url: '1920X' }}');background-attachment:fixed;background-repeat:no-repeat;background-position:center center; {% else %}background-color:{{section.settings.sec_bg_color}};{% endif%}">
  {%- assign collection = collections[section.settings.collection] -%}  
   <div class="pattern pattern-{{ section.id }}-animate" style="{% if section.settings.bg_image != blank %} background-image:url('{{ section.settings.bg_image | img_url: 'master' }}');background-repeat:no-repeat; position:absolute;width:250px;height:250px;z-index:0;left:2%;top:40px;{% endif %}"></div>
  <div class="container">
    <div class="grid--uniform">    
      {% if section.settings.alignment == 'left' %} 
      <div class="grid__item wide--three-quarters post-large--two-quarters large--two-quarters medium-down--grid__item small--grid__item  wow fadeInLeft animated"> 
        <div id="type-3__carousel_banner">
          <div class="img-hover-effect">
            <div class="ovrly23">
              {% if section.settings.link != blank %}<a href="{{ section.settings.link }}">{% endif%}
              {% if section.settings.image != blank %}
              <img src="{{ section.settings.image | img_url: '1920X' }}" alt="{{ section.settings.title }}" />
              <div class="overlay" {% if settings.overlay_use %}  style="background:{{ section.settings.overlay_bgcolor | color_modify: 'alpha', 0.5 }};"{% endif %}></div>
              {% else %}
              <img src="//via.placeholder.com/1000x600">
              {% endif%}           
              {% if section.settings.link != blank %}  </a>

              {% endif%}
              <div class="featured-content">                  
              {% if section.settings.title != blank %}
                <h2 style="color:{{ section.settings.title_clr }};">{{ section.settings.title }}</h2>
                {% endif %}
                {% if section.settings.sub_title != blank %}
                <p style="color:{{ section.settings.sub_title_clr }};">{{ section.settings.sub_title }}</p>
                {% endif %}                
                {% if section.settings.text != blank %}
                <h6 style="color:{{ section.settings.text_clr }};">{{ section.settings.text}}</h6>    
                {% endif %}  
                {% if section.settings.link != blank %}
                <a class="btn" href="{{ section.settings.link }}">{{ section.settings.button }}</a>    
                {% endif %}       
              </div>   
            </div>    
          </div>
        </div>
      </div>
      {% endif %}

      {% if section.settings.alignment == 'right' or  section.settings.alignment == 'left' %} 
      {%- assign grid_mid_width = 'wide--one-quarter post-large--one-quarter large--one-quarter medium-down--grid__item small--grid__item' -%}     
      {% else %}
      {%- assign grid_mid_width = ' ' -%}
      {% endif%}    
      <div class="grid__item {{grid_mid_width }}"> 
        <div class="home-product-grid-type-3-carousel " style="background:{{section.settings.product_bgcolor}}">  
          {% if section.settings.heading != blank %}
          <h2 style= "color:{{ section.settings.title_clr }};background:{{section.settings.title_bgclr }};">{{ section.settings.heading }}</h2>
          {% endif %}   
            <ul class="type3__items  {{section.id}}">                                     
              {% for product in collection.products   %}             
              {% include 'v_grid_item', grid_item_width:" " %}          
              {% else  %}
              {% include 'empty-row', grid_item_width:" " %}          
              {% endfor %}        
            </ul>                     
        </div>
      </div>     
 
      {% if section.settings.alignment == 'right' %} 
      <div class="grid__item wide--three-quarters post-large--three-quarters large--three-quarters medium-down--grid__item small--grid__item wow fadeInRight animated"> 
        <div id="type-3__carousel_banner">
          <div class="img-hover-effect">
            <div class="ovrly23">
              {% if section.settings.link != blank %}<a href="{{ section.settings.link }}">{% endif%}
              {% if section.settings.image != blank %}
              <img src="{{ section.settings.image | img_url: '1920X' }}" alt="{{ section.settings.title }}" />
              <div class="overlay" {% if settings.overlay_use %}  style="background:{{ section.settings.overlay_bgcolor | color_modify: 'alpha', 0.5 }};"{% endif %}></div>
              {% else %}
              <img src="//via.placeholder.com/1000x600">
              {% endif%}           
              {% if section.settings.link != blank %}  </a>

              {% endif%}
              <div class="featured-content">                
                {% if section.settings.title != blank %}
                <h2 style="color:{{ section.settings.title_clr }};">{{ section.settings.title }}</h2>
                {% endif %}
                {% if section.settings.sub_title != blank %}
                <p style="color:{{ section.settings.sub_title_clr }};">{{ section.settings.sub_title }}</p>
                {% endif %}                
                {% if section.settings.text != blank %}
                <h6 style="color:{{ section.settings.text_clr }};">{{ section.settings.text}}</h6>    
                {% endif %}  
                {% if section.settings.link != blank %}
                <a class="btn" href="{{ section.settings.link }}">{{ section.settings.button }}</a>    
                {% endif %}         
              </div>   
            </div>    
          </div>
        </div>
      </div>
      {% endif %}

    </div>
  </div>
<div class="pattern2 pattern2-{{ section.id }}-animate" style="{% if section.settings.bg_image_1 != blank %} background-image:url('{{ section.settings.bg_image_1 | img_url: 'master' }}');background-repeat:no-repeat;position:absolute;width:180px;height:220px;z-index:0;right:3%;bottom:15%;{% endif %}"></div>
</div>
<style>
  
  .home-product-grid-type-3 .home-product-grid-type-3-carousel ul li .products{ border-bottom:3px dashed; border-bottom-color:{{section.settings.border_clr}};padding-bottom:10px;}
 
  .home-product-grid-type-3 .home-product-grid-type-3-carousel h2{ color:{{section.settings.title_1_clr}} !important;}
  
  .home-product-grid-type-3 .img-hover-effect .featured-content a{ background:{{ section.settings.btn_bg_clr }}; }
  
  .home-product-grid-type-3 .img-hover-effect .featured-content a:hover{ background:{{ section.settings.btn_bg_hover }};}
  
  .home-product-grid-type-3 .img-hover-effect .featured-content:before{ background:{{ section.settings.bg_color }};border-color:{{ section.settings.before_border_clr}};}
  
  .img-hover-effect:hover .featured-content:before{ background:{{ section.settings.before_border_clr }};border-color:{{ section.settings.bg_color}};}
  
  .home-product-grid-type-3 .home-product-grid-type-3-carousel .slick-prev, .home-product-grid-type-3 .home-product-grid-type-3-carousel .slick-next{ background:{{section.settings.sld_btn_bg_clr}};}
</style>

<script type="text/javascript">
 
 $(window).mousemove(function(e) {
    var change;
    var ypos=e.clientX;var xpos=e.clientY;var right= change*20;
    var  xpos=xpos*2;ypos=ypos*2;
    $('.pattern2-{{ section.id }}-animate').css('bottom',((0+(xpos/50))+"px"));
    $('.pattern2-{{ section.id }}-animate').css('right',(( 0+(ypos/80))+"px"));
                   
  });
      </script>



