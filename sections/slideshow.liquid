
<div class="wrapper">
  <div class="home-slideshow">
    <div class="variable-width" data-slick='{dots: true, slidesToScroll: 1,autoplay:false,fade: {{ section.settings.slideshow_transition }},autoplaySpeed:{{ section.settings.slideshow_speed }}'>
      {% for block in section.blocks %}
      {% if block.type == 'style_1' %}
      <div class="slick-list slider_style_1 slider-{{ block.id }}-list"> 
        {% include 'slider-data' %}
        <style> 
          .slider_style_1 .slide-offer-text span {color:{{block.settings.subheading_color}}!important;}
          /* .slider_style_1 .btn:hover {color:{{block.settings.btn_hovertxt_color}}!important;background:{{block.settings.btn_hoverbg_color}}!important;}*/

          @media screen and (min-width: 320px) and (max-width: 767px) {

            .slider_style_1 .slider-content {background:{{ block.settings.mobile_bg_clr | color_modify: 'alpha', 0.7 }};}
          }
        </style>
      </div>
      {% endif %}
      {% if block.type == 'style_2' %}
      <div class="slick-list slider_style_2 slider-{{ block.id }}-list">                
        {% include 'slider-data' %}
        <style> 
          .slider_style_2 .slide-offer-text span {color:{{block.settings.subheading_color}}!important;}
          @media screen and (min-width: 320px) and (max-width: 767px) {

            .slider_style_2 .slider-content {background:{{ block.settings.mobile_bg_clr | color_modify: 'alpha', 0.7}};}
          }
        </style>
      </div>
      {% endif %}
      {% if block.type == 'style_3' %}
      <div class="slick-list slider_style_3 slider-{{ block.id }}-list">                
        {% include 'slider-data' %}
        <style> 

          .slider_style_3 .slide-offer-text span {color:{{block.settings.title_2_clr}}!important;}
          
           {% if block.settings.show_overlay_bg != blank %} 
          .slider_style_3 .slider-content {background:{{ block.settings.content_bg_clr | color_modify: 'alpha', 0.7 }};}
           {% endif %}
          
          
           @media screen and (min-width: 320px) and (max-width: 767px) {
          
           }
          
          
        </style>
      </div>
      {% endif %}
      {% endfor %}
    </div>
  </div>
</div>



<script>  
  $(document).on('ready', function() {
    $('.variable-width').slick({
      dots: true,
      slidesToScroll: 1,
      autoplay:{{ section.settings.slideshow_play }},
      fade: {{ section.settings.slideshow_transition }},
      autoplaySpeed:{{ section.settings.slideshow_speed }},
      afterChange: function(slick, currentSlide){
      console.log(currentSlide);
    }
                               });   
  })
</script>




<style>


  @media screen and (min-width: 320px) and (max-width: 767px) {}


  {% for block in section.blocks %}

  .slider-{{ block.id }}-list .btn {  background:{{ block.settings.btn_bg_color  }};color:{{ block.settings.btn_txt_color }}; }



  .slider-{{ block.id }}-list .btn:hover { background:{{ block.settings.btn_hoverbg_color  }};color:{{ block.settings.btn_hovertxt_color }}; }
  {% endfor %}
</style>



